{
  "name": "gd-instance-launcher",
  "version": "1.2.1",
  "description": "Game Instance Launcher for Geometry Dash",
  "homepage": "https://github.com/pcpapc172/gd-launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "pcpapc172",
    "email": "apkme11e@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "decompress": "^4.2.1",
    "decompress-unzip": "^4.0.1",
    "easydl": "^1.2.0",
    "plist": "^3.1.0",
    "ps-list": "7.2.0",
    "semver": "^7.5.4"
  },
  "build": {
    "publish": null,
    "appId": "com.pcpapc172.gdlauncher",
    "productName": "GDLauncher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "editor.js",
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "deb","rpm"
      ],
      "icon": "./",
      "category": "Game",
      "maintainer": "pcpapc172 <apkme11e@gmail.com>"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
